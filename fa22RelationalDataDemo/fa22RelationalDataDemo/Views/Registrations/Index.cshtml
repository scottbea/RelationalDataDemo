@model IEnumerable<Registration>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNotes)
            </th>
            <th>
                Registration Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationTotal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegistrationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RegistrationID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
